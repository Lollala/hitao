<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzitxx.hitao.mapper.GoodsAttrTemplateMapper">
    <!--shop_goods_attr_template表中的列-->
    <sql id="goodsAttrTemplateBaseColumn">
         attr_id,
         cat_id,
         attr_value,
         is_del,
         created_time,
         updated_time
    </sql>


    <!--添加-->
    <insert id="addGoodsAttrTemplate" parameterType="com.hzitxx.hitao.entity.GoodsAttrTemplate">
        INSERT INTO shop_goods_attr_template(
            <include refid="goodsAttrTemplateBaseColumn"/>
        ) VALUES(
                #{attrId},
                #{catId},
                #{attrValue},
                #{isDel},
                #{createdTime},
                #{updatedTime}
        )
    </insert>
    <insert id="addGoodsAttrTemplateSelective" parameterType="com.hzitxx.hitao.entity.GoodsAttrTemplate">
        insert into shop_goods_attr_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="attrId != null">
                attr_id,
            </if>
            <if test="catId != null">
                cat_id,
            </if>
            <if test="attrValue != null">
                attr_value,
            </if>
            <if test="isDel != null">
                is_del,
            </if>
            <if test="createdTime != null">
                created_time,
            </if>
            <if test="updatedTime != null">
                updated_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="attrId != null">
                #{attrId},
            </if>
            <if test="catId != null">
                #{catId},
            </if>
            <if test="attrValue != null">
                #{attrValue},
            </if>
            <if test="isDel != null">
                #{isDel},
            </if>
            <if test="createdTime != null">
                #{createdTime},
            </if>
            <if test="updatedTime != null">
                #{updatedTime},
            </if>
        </trim>
    </insert>
    <!--根据id删除数据-->
    <delete id="deleteById" parameterType="integer">
        DELETE FROM  shop_goods_attr_template WHERE
        attr_id = #{attrId}
    </delete>

    <!--根据id批量删除数据-->
    <delete id="deleteByIds" parameterType="java.lang.String">
          delete FROM  shop_goods_attr_template WHERE attr_id in
          <foreach item="idItem" collection="array" open="(" separator="," close=")">
            #{idItem}
          </foreach>
    </delete>
    <!--根据id修改数据-->
    <update id="updateById" parameterType="com.hzitxx.hitao.entity.GoodsAttrTemplate">
        UPDATE shop_goods_attr_template
        <set>
          attr_id=#{attrId},
          cat_id=#{catId},
          attr_value=#{attrValue},
          is_del=#{isDel},
          created_time=#{createdTime},
          updated_time=#{updatedTime}
        </set>
        WHERE
           attr_id = #{attrId}
    </update>

    <update id="updateSelectiveById" parameterType="com.hzitxx.hitao.entity.GoodsAttrTemplate">
        UPDATE shop_goods_attr_template
        <set>
    <if test="attrId != null">
          attr_id = #{attrId},
    </if>
    <if test="catId != null">
          cat_id = #{catId},
    </if>
    <if test="attrValue != null">
          attr_value = #{attrValue},
    </if>
    <if test="isDel != null">
          is_del = #{isDel},
    </if>
    <if test="createdTime != null">
          created_time = #{createdTime},
    </if>
    <if test="updatedTime != null">
          updated_time = #{updatedTime},
    </if>
    </set>
        WHERE
      attr_id = #{attrId}
    </update>
    <!--根据id查询一条数据-->
    <select id="findOne" resultMap="goodsAttrTemplateMap" parameterType="integer">
        select
        <include refid="goodsAttrTemplateBaseColumn"/>
        from
            shop_goods_attr_template
        WHERE
          attr_id = #{attrId}
    </select>
    <!--查询数据-->
    <select id="searchGoodsAttrTemplate" parameterType="map" resultMap="goodsAttrTemplateMap">
        SELECT
        <include refid="goodsAttrTemplateBaseColumn"/>
        FROM shop_goods_attr_template
        <include refid="goodsAttrTemplateBaseWhereSql"/>
    </select>
    <!--基础查询条件-->
    <sql id="goodsAttrTemplateBaseWhereSql">
        <if test="map!=null">
            <where>
                <if test="attrId !=null">
                    AND attr_id = #{map.attrId}
                </if>
                <if test="catId !=null">
                    AND cat_id = #{map.catId}
                </if>
                <if test="attrValue !=null">
                    AND attr_value = #{map.attrValue}
                </if>
                <if test="isDel !=null">
                    AND is_del = #{map.isDel}
                </if>
                <if test="createdTime !=null">
                    AND created_time = #{map.createdTime}
                </if>
                <if test="updatedTime !=null">
                    AND updated_time = #{map.updatedTime}
                </if>
            </where>
        </if>
    </sql>

         <!-- 通用查询映射结果 -->
    <resultMap id="goodsAttrTemplateMap" type="com.hzitxx.hitao.entity.GoodsAttrTemplate">
            <id column="attr_id" property="attrId"/>
            <result column="cat_id" property="catId"/>
            <result column="attr_value" property="attrValue"/>
            <result column="is_del" property="isDel"/>
            <result column="created_time" property="createdTime"/>
            <result column="updated_time" property="updatedTime"/>
     </resultMap>
</mapper>
